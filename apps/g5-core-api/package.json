{
  "name": "g5-core-api",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
    "start": "nest start",
  "start:dev": "pnpm exec nest start --watch --port 3001",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main.js",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts' --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migration:generate": "ts-node ./src/migrate-generate.ts",
  "migration:run": "ts-node ./src/migrate-run.ts",
  "migration:down": "ts-node ./src/migrate-down.ts",
  "backup:run": "ts-node src/backups/backup.service.ts --once",
  "backup:restore": "ts-node src/backups/restore-backup.ts",
    "migration:generate:ci": "node -e \"const n=Date.now();process.argv[1]&&0;\" && pnpm -F g5-core-api build && pnpm exec typeorm migration:generate src/migrations/InitSchema -d dist/data-source.js",
    "seed": "ts-node src/seeds/seed.ts || echo Seed script placeholder (create src/seeds/seed.ts)",
    "pg:debug": "ts-node scripts/pg-debug.ts",
    "gen:swagger": "ts-node scripts/generate-swagger-lite.ts",
    "fetch:openapi": "ts-node scripts/fetch-openapi.ts",
  "gen:postman": "node -e \"const fs=require('fs');if(!fs.existsSync('openapi/openapi.json')){console.log('openapi missing -> generating');process.exit(42);} \" || pnpm gen:swagger && ts-node scripts/generate-postman.ts",
  "db:check": "ts-node scripts/db-redis-check.ts",
  "redis:smoke": "ts-node scripts/redis-smoke.ts",
  "deps:check": "powershell -Command \"pnpm outdated; exit 0\"",
  "gen:client": "pnpm gen:swagger && openapi-typescript openapi/openapi.json -o ../../packages/plugin-sdk/src/client/index.ts",
  "gen:sdk": "pnpm gen:client && pnpm -F @g5/sdk build",
  "gen:client:direct": "openapi-typescript openapi/openapi.json -o ../../packages/plugin-sdk/src/client/index.ts",
  "ci:gates": "pnpm lint && pnpm build && pnpm check:migrations && pnpm test:cov && pnpm artifacts:runtime && pnpm check:artifacts && pnpm openapi:diff",
  "artifacts:all": "ts-node scripts/gen-artifacts.ts",
  "artifacts:runtime": "node scripts/gen-artifacts-runtime.js",
  "check:artifacts": "node scripts/check-artifacts.js",
  "openapi:diff": "node scripts/openapi-diff-check.js",
  "db:reset": "powershell -NoProfile -Command \"docker compose down; docker volume rm g5_g5_pgdata -ErrorAction SilentlyContinue; docker volume rm g5_g5_pgdata_v2 -ErrorAction SilentlyContinue; docker compose up -d postgres redis\"",
  "theme:snapshot:create": "ts-node scripts/create-theme-snapshot.ts",
  "theme:snapshots:list": "ts-node scripts/list-theme-snapshots.ts",
  "theme:ensure:default": "ts-node scripts/ensure-default-theme.ts",
  "theme:list": "ts-node scripts/list-themes.ts",
  "theme:snapshot:rollback": "ts-node scripts/rollback-theme-snapshot.ts",
  "theme:demo": "ts-node scripts/theme-demo.ts"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/bullmq": "^11.0.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/schedule": "^4.0.0",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/typeorm": "^11.0.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.62.1",
    "@opentelemetry/exporter-trace-otlp-http": "^0.203.0",
    "@opentelemetry/instrumentation-http": "^0.203.0",
    "@opentelemetry/instrumentation-ioredis": "^0.51.0",
    "@opentelemetry/instrumentation-pg": "^0.56.0",
    "@opentelemetry/resources": "^2.0.1",
    "@opentelemetry/sdk-node": "^0.203.0",
    "@opentelemetry/semantic-conventions": "^1.36.0",
    "@types/uuid": "^10.0.0",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.58.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^16.4.5",
  "express": "^4.19.2",
  "helmet": "^8.1.0",
  "ioredis": "^5.7.0",
    "joi": "^17.13.3",
    "nestjs-pino": "^4.4.0",
    "node-fetch": "^3.3.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
  "pg": "^8.16.3",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
  "typeorm": "^0.3.26",
    "uuid": "^11.1.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/joi": "^17.2.3",
    "@types/node": "^22.10.7",
    "@types/passport-jwt": "^4.0.1",
    "@types/pg": "^8.11.0",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "openapi-typescript": "^7.9.1",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 70,
        "lines": 75,
        "statements": 75
      }
    }
  }
}
